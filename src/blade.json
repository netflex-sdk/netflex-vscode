{
  "content-directive": {
    "prefix": [
      "@content"
    ],
    "body": [
      "@content(${1:'area'})"
    ],
    "description": "Retrieves the Content Area"
  },
  "mode": {
    "prefix": [
      "@mode"
    ],
    "body": [
      "@mode('${1|live,preview,edit|}')",
      "\t$0",
      "@endmode"
    ],
    "description": "Conditional block based on current_mode"
  },
  "inline": {
    "prefix": [
      "<x-inline>"
    ],
    "body": [
      "<x-inline area=\"${1:area}\" is=\"${2|div,p,h1,h2,h3|}\" />"
    ],
    "description": "Inline HTML Editor"
  },
  "image": {
    "prefix": [
      "<x-image src>"
    ],
    "body": [
      "<x-image :src=\"${1:\\$src}\" mode=\"${2|e,o,rc,p,l,a,c,fill|}\" width=\"${3:256}\" width=\"${4:256}\" />"
    ],
    "description": "Image Field (CDN)"
  },
  "image-inline": {
    "prefix": [
      "<x-image area>"
    ],
    "body": [
      "<x-image area=\"${1:area}\" mode=\"${2|e,o,rc,p,l,a,c,fill|}\" width=\"${3:256}\" height=\"${4:256}\" />"
    ],
    "description": "Inline Image Field"
  },
  "background-image": {
    "prefix": [
      "<x-background-image>"
    ],
    "body": [
      "<x-background-image src=\"{1:\\$src}\" id=\"${2:id}\" class=\"${3:class}\" mode=\"${4|e,o,rc,p,l,a,c,fill|}\" width=\"${5:256}\" height=\"${6:256}\" />"
    ],
    "description": "Background Image"
  },
  "picture": {
    "prefix": [
      "<x-picture src>"
    ],
    "body": [
      "<x-picture src=\"{1:\\$src}\" mode=\"${2|e,o,rc,p,l,a,c,fill|}\" width=\"${3:256}\" width=\"${4:256}\" />"
    ],
    "description": "Picture Field (CDN)"
  },
  "picture-inline": {
    "prefix": [
      "<x-picture area>"
    ],
    "body": [
      "<x-picture area=\"${1:area}\" mode=\"${2|e,o,rc,p,l,a,c,fill|}\" width=\"${3:256}\" width=\"${4:256}\" />"
    ],
    "description": "Inline Picture Field"
  },
  "seo": {
    "prefix": [
      "<x-seo>"
    ],
    "body": [
      "<x-seo />"
    ],
    "description": "SEO Meta Tags"
  },
  "editor-button": {
    "prefix": [
      "<x-editor-button>"
    ],
    "body": [
      "<x-editor-button area=\"${1:area}\" type=\"${2|checkbox,checkbox-group,color,contentlist,contentlist_advanced,datetime,editor_large,editor_small,entries,file,gallery,image,integer,link,multiselect,nav,select,tags,text,textarea|}\">",
      "\t${0:Button Label}",
      "</x-editor-button>"
    ],
    "description": "Editor Button"
  },
  "editor-tools": {
    "prefix": [
      "<x-editor-tools>"
    ],
    "body": [
      "<x-editor-tools />"
    ],
    "description": "Editor Tools"
  },
  "blocks": {
    "prefix": [
      "<x-blocks>"
    ],
    "body": [
      "<x-blocks area=\"${0:sections}\" />"
    ],
    "description": "Block Builder"
  },
  "static-content": {
    "prefix": [
      "<x-static-content>"
    ],
    "body": [
      "<x-static-content area=\"${1:area}\" />"
    ],
    "description": "Static Content"
  },
  "content": {
    "prefix": [
      "<x-content>"
    ],
    "body": [
      "<x-content area=\"${1:area}\" />"
    ],
    "description": "Content Area"
  }
}
